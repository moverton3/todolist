<h1>New List Item</h1>

<%= form_for :todo do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, required: true %>
  <br />
  <%= f.label :description %>
  <%= f.text_field :description, required: true %>
  <br />
  <%= f.label :complete %>
  <%= f.text_area :complete, required: true %>
  <br />
  <%= f.submit %>
<% end %>

<br />

<%= link_to 'Todo List', todos_path %>
